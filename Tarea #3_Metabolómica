#Tarea 3

# Vector A: Película
Película <- c("Anora",
              "The Brutalist",
              "Flow",
              "Emilia Pérez",
              "Wicked",
              "Dune: Part Two",
              "I’m Still Here")

# Vector B: Premios Oscar 2025
Premios_Oscar_2025 <- c("Mejor Película, Mejor Director, Mejor Actriz, Mejor Guion Original, Mejor Montaje",
                        "Mejor Actor, Mejor Fotografía, Mejor Banda Sonora",
                        "Mejor Película de Animación",
                        "Mejor Actriz de Reparto, Mejor Canción Original",
                        "Mejor Diseño de Vestuario, Diseño de Producción",
                        "Mejor Sonido, Mejores Efectos Visuales",
                        "Mejor Película Internacional")

# Vector C: Mes de estreno
Mes_de_estreno <- c("Enero",
                    "Diciembre",
                    "Diciembre",
                    "Mayo",
                    "Noviembre",
                    "Marzo",
                    "Febrero")

# Vector D: Recaudación mundial (estimada)
Recaudacion_mundial <- c(41000000,
                         41400000,
                         728000000,
                         714000000,
                         20000000,
                         29900000,
                         30000000)

# Evitar notación científica en general
options(scipen = 999)

# Crear el dataframe con stringsAsFactors = FALSE
df_peliculas <- data.frame(Película,
                           Premios_Oscar_2025,
                           Mes_de_estreno,
                           Recaudacion_mundial,
                           stringsAsFactors = FALSE)

# Mostrar recaudación con formato de dinero
df_peliculas$Recaudacion_mundial <- format(df_peliculas$Recaudacion_mundial,
                                           big.mark = ",",
                                           scientific = FALSE)

View(df_peliculas)

